# Database Configuration
# Choose ONE of the following database options:

# Option 1: Vercel Postgres (Recommended for Vercel deployments)
POSTGRES_URL=postgresql://username:password@host:5432/database
POSTGRES_PRISMA_URL=postgresql://username:password@host:5432/database
POSTGRES_URL_NON_POOLED=postgresql://username:password@host:5432/database
POSTGRES_USER=username
POSTGRES_HOST=host
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=database

# Option 2: Custom PostgreSQL/Neon
DATABASE_URL=your_database_connection_string_here

# Option 3: Xata (if using Xata)
XATA_API_KEY=your_xata_api_key_here
XATA_DATABASE_URL=your_xata_database_url_here
USE_XATA=true

# Session Configuration
SESSION_SECRET=your_session_secret_here

# Node Environment
NODE_ENV=production

# Port (Vercel handles this automatically)
PORT=3000

# API Configuration
API_BASE_URL=https://your-vercel-app-name.vercel.app
